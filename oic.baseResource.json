{
  "id": "http://openinterconnect.org/iotdatamodels/schemas/oic.baseResource.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2016 Open Connectivity Foundation, Inc. All rights reserved.",
  "title": "Base Resource",
  "definitions": {
    "oic.r.baseresource": {
      "type": "object",
      "properties": {
        "value": {
          "description": "The value sensed or actuated by this Resource",
          "anyOf": [
            {"type": "array"},
            {"type": "string"},
            {"type": "boolean"},
            {"type": "integer"},
            {"type": "number"},
            {"type": "object"}
          ]
        },
        "range": {
          "type": "array",
          "description": "The valid range for the value Property",
          "readOnly": true,
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "anyOf": [
              {"type": "number"},
              {"type": "integer"}
            ]
          }
        },
        "step": {
          "description": "Step value across the defined range",
          "readOnly": true,
          "anyOf": [
            {"type": "integer"},
            {"type": "number"}
          ]
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    {"$ref": "#/definitions/oic.r.baseresource"}
  ]
}
